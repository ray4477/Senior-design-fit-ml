            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center" />

        </TableRow>

        <TableRow android:layout_height="fill_parent">


            <Button
                android:id="@+id/button_tmp"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#BF5700"
                android:backgroundTint="#BF5700"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="BPM"
                app:icon="@color/orang"
                app:iconTint="#BF5700"
                app:rippleColor="#BF5700" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_hum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:backgroundTint="@color/purple_500"
                android:text="X"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_rain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0057BF"
                android:backgroundTint="#0057FF"
                android:backgroundTintMode="src_over"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Y"
                android:textColor="@color/white"
                app:iconTintMode="src_in" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00BF57"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Z"
                android:textColor="@color/white"
                app:iconTintMode="add"
                app:rippleColor="#00BF57"
                tools:ignore="TextContrastCheck,TextContrastCheck" />
        </TableRow>


    </TableLayout>

    <!--<?xml version= "1.0" encoding="utf-8"?>-->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"

        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data"
        tools:context=".MainActivity">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/idGraphView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_clr"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="clear graph"
        app:layout_constraintBottom_toTopOf="@+id/data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/unit_tmp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/unit_tmp"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_city">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="T_unit"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="26dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/blu"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="R_unit"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="26dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/grn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="z_unit"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

